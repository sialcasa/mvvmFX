<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<VBox spacing="10.0" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.saxsys.mvvmfx.examples.itemlist.ui.multiselection.MultiSelectView">
   <children>
      <Label styleClass="bigLabel" text="Multiselection is not implemented yet"/>
      <Label fx:id="favoritesLabel" styleClass="bigLabel" text="Your choices:" />
      <Separator prefWidth="200.0" />
      <VBox>
         <children>
            <Label styleClass="bigLabel" text="ListView" />
            <ListView fx:id="listView" prefHeight="200.0" />
         </children>
      </VBox>
      <Separator prefWidth="200.0" />
      <HBox>
         <children>
            <Button mnemonicParsing="false" onAction="#clearSelection" text="Clear Selection" />
         </children>
      </HBox>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
